<Project DefaultTargets="BuildAll" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <DLLProjects Include="tsduckdll.vcxproj"/>
  </ItemGroup>

  <ItemGroup>
    <StaticLibProjects Include="tsducklib.vcxproj"/>
  </ItemGroup>

  <ItemGroup>
    <PluginProjects Include="tsplugin_*.vcxproj"/>
  </ItemGroup>

  <ItemGroup>
    <CommandsProjects Include="ts*.vcxproj"/>
    <CommandsProjects Remove="tsplugin_*.vcxproj"/>
    <CommandsProjects Remove="tsduck*.vcxproj"/>
  </ItemGroup>

  <ItemGroup>
    <TestsProjects Include="utests-tsduckdll.vcxproj"/>
    <TestsProjects Include="utests-tsducklib.vcxproj"/>
  </ItemGroup>

  <ItemGroup>
    <InstallToolsProjects Include="setpath.vcxproj"/>
  </ItemGroup>

  <Target Name="BuildAll">
    <MSBuild Projects="@(DLLProjects)" Targets="Build"/>
    <MSBuild Projects="@(StaticLibProjects)" Targets="Build"/>
    <MSBuild Projects="@(PluginProjects)" Targets="Build"/>
    <MSBuild Projects="@(CommandsProjects)" Targets="Build"/>
    <MSBuild Projects="@(TestProjects)" Targets="Build"/>
    <MSBuild Projects="@(InstallToolsProjects)" Targets="Build"/>
  </Target>

  <Target Name="BuildDLL">
    <MSBuild Projects="@(DLLProjects)" Targets="Build"/>
  </Target>

  <Target Name="BuildTests">
    <MSBuild Projects="@(DLLProjects)" Targets="Build"/>
    <MSBuild Projects="@(StaticLibProjects)" Targets="Build"/>
    <MSBuild Projects="@(TestsProjects)" Targets="Build"/>
  </Target>

  <Target Name="BuildPlugins">
    <MSBuild Projects="@(DLLProjects)" Targets="Build"/>
    <MSBuild Projects="@(PluginProjects)" Targets="Build"/>
  </Target>

  <Target Name="BuildCommands">
    <MSBuild Projects="@(DLLProjects)" Targets="Build"/>
    <MSBuild Projects="@(CommandsProjects)" Targets="Build"/>
  </Target>

  <Target Name="BuildInstaller">
    <MSBuild Projects="@(DLLProjects)" Targets="Build"/>
    <MSBuild Projects="@(StaticLibProjects)" Targets="Build"/>
    <MSBuild Projects="@(PluginProjects)" Targets="Build"/>
    <MSBuild Projects="@(CommandsProjects)" Targets="Build"/>
    <MSBuild Projects="@(InstallToolsProjects)" Targets="Build"/>
  </Target>

</Project>
